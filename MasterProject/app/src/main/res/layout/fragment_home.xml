<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@drawable/musichomepage">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_bold_italic"
        android:gravity="center"
        android:text="Loop Music"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginTop="-20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:padding="50dp"
        android:text="Loop Music is the best music streaming app to
enjoy great music. Play any song of your favorite
artist, album or playlist in high quality."
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_italic"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:elevation="10dp"
        android:backgroundTint="@color/orange"
        android:background="@drawable/button_border_one"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Sign in"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:elevation="10dp"
        android:background="@drawable/button_border"/>


</FrameLayout>