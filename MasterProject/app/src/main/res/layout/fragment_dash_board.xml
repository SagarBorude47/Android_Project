<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoardFragment"
    android:background="@color/black">

    <TextView
        android:id="@+id/searchtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/roboto_bold"/>

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" Artists,songs or podcasts"
        android:textColorHint="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
       android:layout_below="@+id/searchtitle"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/rect_edit_text"/>

    <TextView
        android:id="@+id/favtext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Favourite music genres"
        android:textColor="@color/white"
        android:layout_below="@+id/search"
        android:textSize="18sp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/favtext"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/gr1"
            android:gravity="center"
            android:text="Latin"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:background="@drawable/gr2"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="Rock"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/linear1"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:background="@drawable/gr3"
            android:gravity="center"
            android:text="Pop"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:background="@drawable/gr4"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="Indie"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/exploretext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Explore Everything"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/linear2"/>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/exploretext"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:background="@drawable/gr5"
            android:gravity="center"
            android:text="At home"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:background="@drawable/gr6"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="Podcast"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/linear3"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:background="@drawable/gr7"
            android:gravity="center"
            android:text="Radio"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:background="@drawable/gr8"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="List"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>




</RelativeLayout>