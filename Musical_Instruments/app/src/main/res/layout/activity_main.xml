<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:columnCount="3"
    android:rowCount="8"
    android:padding="16dp"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="Musical" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/m1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="B1"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:src="@drawable/drums"
        android:background="#FFDBBB"
        android:elevation="10dp"

        android:layout_columnWeight="1"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/m2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/electricguitar"
        android:layout_row="1"
        android:layout_column="1"
        android:text="B2"
        android:padding="20dp"
        android:layout_margin="10dp"

        android:elevation="10dp"
        android:background="#FFDBBB"
        android:layout_columnWeight="1"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/m3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="2"
        android:text="B3"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="#FFDBBB"
        android:elevation="10dp"
        android:src="@drawable/harmonica"
        android:layout_columnWeight="1"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/m4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text="B3"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="#FFDBBB"
        android:elevation="10dp"
        android:src="@drawable/harp"
        android:layout_columnWeight="1"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/m5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="1"
        android:text="B3"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="#FFDBBB"
        android:elevation="10dp"
        android:src="@drawable/xylophone"
        android:layout_columnWeight="1"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/m6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="2"
        android:elevation="10dp"
        android:text="B3"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="#FFDBBB"
        android:src="@drawable/piano"
        android:layout_columnWeight="1"/>

</GridLayout>