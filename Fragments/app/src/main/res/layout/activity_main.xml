<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:text="RED" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#00FF00"
            android:padding="5dp"
            android:text="GREEN" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#0000FF"
            android:padding="5dp"
            android:text="BLUE" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9933"
            android:padding="5dp"
            android:text="ORANGE" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_twoone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#299438"
            android:text="GREEN" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_twotwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FAD000"
            android:padding="5dp"
            android:text="YELLOW" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_twothree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#B82558"
            android:padding="5dp"
            android:text="BERRY RED" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_twofour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#6ACCBC"
            android:padding="5dp"
            android:text="MINT GREEN" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_threeone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#6ACCBC"
            android:text="BROWN" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_threetwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="5dp"
            android:text="WHITE" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_threethree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#DAA520"
            android:padding="5dp"
            android:text="Golden" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfragment_threefour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:padding="5dp"
            android:text="GRAY" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>